@model PagedList.IPagedList<CTBusinessLayer.PhotoGallery>
@using CrystalTettey.Models;
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = "Crystal's Photo Gallery";
}

<h2><strong>@ViewBag.Title</strong></h2>

<html>

<body>

    <div class="container">
        <div class="row>">
            @foreach (CTBusinessLayer.PhotoGallery ctItem in @Model)
            {
                <div class="card col-xs-12">
                    <a href="@Url.Content(ctItem.photoLink)" class="thumbnail" style="background-color: #e67e22;">
                        <p><font color="yellow">@ctItem.photoDescription</font></p>
                        <img alt="@ctItem.photoAltName" src="@Url.Content(ctItem.photoLink)" class="img-responsive img-thumbnail" />
                    </a>
            </div>
             <br /><br />
              

            }
        </div>
      
    </div>

    <p>
        <a @Html.ActionLink("Back", "Index", "Home", new { @class = "btn btn-danger" })</a>
    </p>
</body>

</html>
