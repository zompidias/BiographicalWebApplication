@model CrystalTettey.Models.RelatedLinks

@{
    ViewBag.Title = "Create Link";
}

<h2><strong>@ViewBag.Title</strong></h2>

<html>


<body>
    <div class="panel panel-default ">
        <div class="panel-body ">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <fieldset>
                    @*<legend>RelatedLinks</legend>*@

                    <div class="editor-label">
                        Link Name
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.linkName, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.linkName, "", new { @class = "text-danger mark" })
                    </div>

                    <div class="editor-label">
                        Description
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.linkDescription, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.linkDescription, "", new { @class = "text-danger mark" })
                    </div>

                    <div class="editor-label">
                        Web Address
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.linkAddress, new { htmlAttributes = new { @class = "form-control input-lg" } })
                        @Html.ValidationMessageFor(model => model.linkAddress, "", new { @class = "text-danger mark" })
                    </div>

                    <p>
                        <input type="submit" value="Create" class=" btn btn-success" />
                    </p>
                </fieldset>
            }
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index", "", "btn btn-danger")
    </div>

</body>
</html>